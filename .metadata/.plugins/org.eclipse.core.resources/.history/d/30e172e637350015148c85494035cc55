package FruitLoops;

import java.util.Scanner;

public class Apples {

	public static void main(String[] args) {
		int numApples = 1000;
		String ending = "st";
		while(numApples > 0){
			
			if(numApples % 10 == 0){  // Because we are one off below
				ending = "st";
			}else{
				ending = "th";
			}
			
			System.out.println("You ate your "+ (1000 - numApples + 1) + ending + " apple!");
			numApples -= 1;
		}
		System.out.println("You now have a tummy ache :<");
		
		System.out.println("Talk to me!");
		
		Scanner scnr = new Scanner(System.in);
		int choice;
		int sum = 0;
		for(int index = 0; index < 10 ; index += 1){
			choice = scnr.nextInt;
			System.out.println(choice);
		}
		
	}

}
