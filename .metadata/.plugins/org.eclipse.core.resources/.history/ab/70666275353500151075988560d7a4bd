package FruitLoops;

public class Apples {

	public static void main(String[] args) {
		int numApples = 1000;
		String ending = "st";
		while(numApples > 0){
			if(numApples % 10 == 1){
				System.out.println("You ate your "+ (1000 - numApples + 1) + "st apple!");
				numApples -= 1;
			}else{
				System.out.println("You ate your "+ (1000 - numApples + 1) + "th apple!");
				numApples -= 1;
			}
			
		}
		System.out.println("You now have a tummy ache :<");
		
	}

}
